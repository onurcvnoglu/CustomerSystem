<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/scripts/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .myfooter {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #9f66cd;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body style="padding-top:0px;">

    <nav class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Müşteri Takip Sistemi", "customerDetail", "CustomerDetails", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Müşteriler", "customerDetail", "CustomerDetails", new { area = "" }, new { @class = "nav-item nav-link active" })
                    <span class="sr-only">(current)</span>

                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Müşteri Faturaları", "billDetail", "Bill", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" style="color:#ffffff; border-color:#ffffff" type="submit">Search</button>
            </form>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="myfooter">
            <p>&copy; @DateTime.Now.Year - Netspeed</p>
        </footer>
    </div>
    @*Takvim seçim scripti*@
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd/mm/yy'
            })
        });
    </script>
</body>

</html>