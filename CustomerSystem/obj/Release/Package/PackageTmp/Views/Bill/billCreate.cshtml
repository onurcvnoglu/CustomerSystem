@model CustomerSystem.ViewModels.BillCreateVM

@{
    ViewBag.Title = "Yeni Faturak Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div style="padding-top:3rem;">
        <table class="table table-striped table-dark" style="padding-top:2rem;">
            <thead>
                <tr>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.customer_id)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.total)
                    </th>
                    <th scope="col">
                        @Html.DisplayNameFor(model => model.bill_date)
                    </th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        @Html.DropDownListFor(model => model.customer_id, Model.customerList, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.customer_id, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.total, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.total, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.bill_date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                        @Html.ValidationMessageFor(model => model.bill_date, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        <input type="submit" value="Oluştur" class="btn btn-success" /> |
                        @Html.ActionLink("Geri Dön", "billDetail")
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
}