<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <script src="~/Scripts/modernizr-2.8.3.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/scripts/jquery-ui.min.css" rel="stylesheet" />
    <script src="~/scripts/jquery-ui.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <link href="~/Content/noArrow.css" rel="stylesheet" />
    <link href="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.css" rel="stylesheet">

    <script src="https://unpkg.com/bootstrap-table@1.14.2/dist/bootstrap-table.min.js"></script>
    <script src="https://unpkg.com/bootstrap-table@1.14.2/dist/extensions/auto-refresh/bootstrap-table-auto-refresh.min.js"></script>


    <style>
        .myfooter {
            position: fixed;
            left: 0;
            bottom: 0;
            width: 100%;
            background-color: #9f66cd;
            color: white;
            text-align: center;
        }
    </style>
</head>
<body style="padding-top:0px;">

    <nav class="navbar navbar-fixed-top navbar-expand-lg navbar-dark bg-dark">
        @Html.ActionLink("Müşteri Takip Sistemi", "customerDetail", "CustomerDetails", new { area = "" }, new { @class = "navbar-brand" })
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Müşteriler", "customerDetail", "CustomerDetails", new { area = "" }, new { @class = "nav-item nav-link active" })
                    <span class="sr-only">(current)</span>

                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Müşteri Faturaları", "billDetail", "Bill", new { area = "" }, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
        @using (Html.BeginForm("customerDetail", "CustomerDetails", FormMethod.Post))
        {
            <div class="input-group mb-3">
                <input type="text" class="form-control" name="txtArama" placeholder="Arama">
                <div class="input-group-append">
                    <button class="btn btn-success" type="submit">Ara</button>
                </div>
            </div>

        }
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="myfooter">
            <p>&copy; @DateTime.Now.Year - Netspeed</p>
        </footer>
    </div>
    @*Takvim seçim scripti*@
    <script type="text/javascript">
        $(function () {
            $('.datepicker').datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'yy/mm/dd'
            })
        });
    </script>
</body>

</html>