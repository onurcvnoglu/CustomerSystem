@model CustomerSystem.ViewModels.BillEditVM

@{
    ViewBag.Title = "billEdit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.bill_id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div style="padding-top:3rem;">
    <table class="table table-striped table-dark" style="padding-top:2rem;">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.customer_name)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.customer_surname)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.bill_total)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.bill_date)
                </th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(model => model.customer_name, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.DisplayFor(model => model.customer_surname, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.customer_surname, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => model.bill_total, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.bill_total, "", new { @class = "text-danger" })
                </td>
                <td>
                    @Html.EditorFor(model => model.bill_date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                    @Html.ValidationMessageFor(model => model.bill_date, "", new { @class = "text-danger" })
                </td>
            </tr>
        </tbody>
    </table>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Kaydet" class="btn btn-success" />
            @Html.ActionLink("Geri Dön", "billDetail")
        </div>
    </div>
</div>
}
